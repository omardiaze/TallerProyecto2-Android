<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="pe.edu.upc.municipalidadmovil.NuevoUsuarioActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mifoto"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:id="@+id/imgFotoUsuarioN"
            android:layout_gravity="center"
            android:src="@drawable/nophoto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Tomar foto"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/btnFotoUsuario"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Abrir galeria"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/btnGaleriaUsuarioN"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtNombreN"
            android:hint="Nombre" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtApePatN"
            android:hint="Apellido Paterno" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtApeMatN"
            android:hint="Apellido Materno"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtDniN"
            android:hint="Dni" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtFecNacN"
            android:hint="Fecha Nacimiento 'dd/mm/yyyy'" />
        <Spinner
            android:id="@+id/spnSexo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtCorreoN"
            android:hint="Correo" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtPassword1N"
            android:inputType="textPassword"
            android:hint="Password" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnGuardarN"
            android:text="Guardar"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>
